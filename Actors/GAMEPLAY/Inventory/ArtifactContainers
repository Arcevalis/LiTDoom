		ACON A 13
		ARST A 0 a_playsound("PLSHEAT",3)
		ARST A 0 a_playsound("STEAM",4,0.5)
		ACON A 0 a_spawnitem("VampireJar")
		stop	
		
	Doom:
		ARST A 0 a_playsound("NVGON",4)
		ARST A 0 a_playsound("PLSCOOL",3)
		TNT1 A 0 A_SpawnItemEx("ContainerSparks",0,0,0,0,0,0,0,SXF_SETMASTER)
