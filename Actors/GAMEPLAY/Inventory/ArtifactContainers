////////////// 		USED		
ACTOR Artifact_Container_used
{
	scale 0.8
  +CANNOTPUSH
  	+SHOOTABLE
	+NOBLOOD
    painchance "disarm", 256
	DAMAGEFACTOR "DISARM", 1000.0
	health 50
  States
  {
  Spawn:
	ACON Z 1
	loop
	
Pain.Disarm:
  Death.Disarm:
	TNT1 A 0
	TNT1 A 0 A_Spawnitemex("emptyvial",0,0, 5,0,1,2,random(1,5))
    stop	
}}
	

///////////////
////////////// 		FILLED	
///////////////

ACTOR REGENJAR : ARTIFACT_CONTAINER
{
Inventory.PickupMessage "$GOTCONTAINERFULL"
Inventory.Icon "ACONL0"
  States
  {
  Spawn:
	ACON B 1 
	ARST A 0 A_changeflag("NOGRAVITY", 0)

 Stay:
    ACON B 1 
	loop

Pickup:
	TNT1 A 0 A_JUMPIFINVENTORY("VAMPIREJAR",1,11)
	TNT1 A 0 A_JUMPIFINVENTORY("MEGAJAR",1,10)
	TNT1 A 0 A_JUMPIFINVENTORY("DOOMJAR",1,9)
	TNT1 A 0 A_JUMPIFINVENTORY("SOULJAR",1,8)
	TNT1 A 0 A_JUMPIFINVENTORY("GODJAR",1,7)
	TNT1 A 0 A_JUMPIFINVENTORY("BLURJAR",1,6)
	TNT1 A 0 A_JUMPIFINVENTORY("RUNEJAR",1,5)
	TNT1 A 0 A_JUMPIFINVENTORY("TIMEJAR",1,4)
	TNT1 A 0 A_JUMPIFINVENTORY("REGENJAR",1,3)
	TNT1 A 0 A_JUMPIFINVENTORY("ARTIFACT_CONTAINER",1,2)
	
	TNT1 A 1 A_RAILWAIT()
	STOP
	TNT1 A 0 a_PRINT("YOU CAN ONLY CARRY ONE ARTIFACT CONTAINER")
	FAIL

  Pain.Disarm:
  Death.Disarm:
	TNT1 A 0
	TNT1 A 0 A_Spawnitemex("emptyVial",0,10, 15,0,1,3,random(1,5))
	TNT1 A 0 A_Spawnitemex("emptyvial",0,-10, 15,0,-1,3,random(1,5))
	TNT1 A 0 A_SpawnitEM("ELECTRONICPARTS")
	TNT1 A 0 A_SpawnitEM("REGENSPHERE")
    stop	
	
  Use:
	ARST A 0 a_playsound("TARMRPK",3)
	TNT1 A 0 A_Spawnitemex("REGENSPHERE",10,0, 5,5,0,3)
	TNT1 A 0 A_Spawnitemex("Artifact_Container_used",8,3, 2,5,3,1)
    STOP
  }
}


