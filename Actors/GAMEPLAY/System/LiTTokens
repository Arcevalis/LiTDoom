ACTOR Rupture : CustomInventory
{
  Inventory.PickupMessage "rupture"
  iNVENTORY.AMOUNT 1
  +AUTOACTIVATE
  States
  {
  Spawn:
    DMHE A 1
    Loop
  PICKUP:
    TNT1 A 0 ACS_NamedExecute("RUPTURE")
    Stop
  }
}