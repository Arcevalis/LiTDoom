
//Random Spawners
Actor LightArmorSPAWNER : BasicWeaponPickup //Replaces GreenArmor
{
    States
    {
	Spawn:
		TNT1 A 1
	TNT1 A 0 A_SpawnItemEx ("armorboots",0,0,0,1,1,0,random(0,360),SXF_NOCHECKPOSITION , 220)
	TNT1 A 0 A_SpawnItemEx ("armorhelmet",0,0,0,1,1,0,random(0,360),SXF_NOCHECKPOSITION , 220)
		TNT1 A 0 A_Jump(80, "Medium")  // Medium Armor
		TNT1 A 0 A_Jump(50,"Belt") //Armor + Belt


		TNT1 A 0 A_Jump(60,2)
		TNT1 A 0 A_SpawnItemEx ("LightArmornew",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
		TNT1 A 0 A_SpawnItemEx ("LightArmorknife",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
	
	 Medium:
	 TNT1 A 0 A_Jump(60,2)
		TNT1 A 0 A_SpawnItemEx ("MediumArmor",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
		TNT1 A 0 A_SpawnItemEx ("MediumArmorknife",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
	
 Belt:
		TNT1 A 0 A_Jump(60,2)
		TNT1 A 0 A_SpawnItemEx ("LightArmorBelt",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
		TNT1 A 0 A_SpawnItemEx ("MediumArmorbelt",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
		
    }
}

