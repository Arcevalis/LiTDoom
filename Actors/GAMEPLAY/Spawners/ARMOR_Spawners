Actor HEAVYARMORSpawner : BasicWeaponPickup //Replaces BlueArmor
{
    States
    {
	Spawn:
		TNT1 A 1
	TNT1 A 0 A_SpawnItemEx ("armorboots",0,0,0,1,1,0,random(0,360),SXF_NOCHECKPOSITION , 200)
	TNT1 A 0 A_SpawnItemEx ("armorhelmet",0,0,0,1,1,0,random(0,360),SXF_NOCHECKPOSITION , 200)
		TNT1 A 0 A_Jump(25, "Tech") // Tech Armor
		TNT1 A 0 A_Jump(50, "Belt") // Heavy Armor Belt

		TNT1 A 0 A_Jump(100,2)
		TNT1 A 0 A_SpawnItemEx ("HeavyArmornew",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
		TNT1 A 0 A_SpawnItemEx ("HeavyArmorknife",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
	
	 Belt:
		TNT1 A 0 A_SpawnItemEx ("HeavyArmorBelt",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
	
	 Tech:
		TNT1 A 0 A_SpawnItemEx ("forcefieldG",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION  ,0)
		Stop
    }
}

