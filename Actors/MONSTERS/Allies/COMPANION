
//Shared Actors
Actor IsHoldingPosition : Inventory //Used to check bot's current order.
{
inventory.maxamount 1
}


ACTOR FriendBotMuzzle
{
	PROJECTILE
	Speed 10
	Scale 0.8
	+THRUACTORS
	+NOGRAVITY
	+CLIENTSIDEONLY
	+MISSILE
	States
	{
	Spawn:
		TNT1 A 1
		TNT1 A 0 A_Stop
		MZBT A 4 BRIGHT
		Stop
	}
}


